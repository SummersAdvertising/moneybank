<body>
<header _height="none">
  <section id="top"> <a id="nav-ctrl"><img src="/images/nav.png"></a>
    <div class="left">
      <h1><a href="#">遠東信貸專業團隊客戶訊息系統</a></h1>
    </div>
    <!--left-->
    <aside> <a id="aside-ctrl"><img src="/images/set.png"></a>
      <div id="aside-box"> <a href="#">登出</a> <a href="http://www.summers.com.tw/">返回首頁</a> </div>
    </aside>
  </section>
  <!--top--> 
</header>

<section id="main" _height="auto" class="login-main">
  <section id="vert">
<%= form_tag( :controller => :tickets, :action => :login) do %>

    <section class="login">
      <ul>
        <li>
          <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
              <th align="center">帳號</th>
              <td><input name="username" type="text" /></td>
            </tr>
          </table>
        </li>
        <li>
          <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
              <th align="center">密碼</th>
              <td><input name="password" type="password" /></td>
            </tr>
          </table>
        </li>
      </ul>
      <input name="submit" type="submit" style="display:none" id="submitLogin" />

      <section class="entrance button"> <a href="javascript: $('#submitLogin').click(); ">登入</a> </section>
      <!--button--> 
<% end %>
    </section>
  </section>
  <!--vert--> 
</section>
<!--main-->

<footer _height="none"> Copyright © <a href="http://www.iwantmoney.com.tw" target="_blank">遠東信貸專業團隊</a> </footer>
